pipeline {
    agent any

    tools {
        jdk 'JAVA_HOME'
        maven 'M2_HOME'
    }

    stages {
        stage('Cloner le projet') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/AmeniChakroun/Chakroun_Ameni_4TWIN8.git'
            }
        }

        stage('Compilation') {
            steps {
                sh 'mvn clean compile'
            }
        }

        // ÉTAPE SONARQUBE À AJOUTER
        stage('MVN SONARQUBE') {
            steps {
                sh """
                mvn sonar:sonar \
                  -Dsonar.projectKey=chakroun_ameni_4twin8 \
                  -Dsonar.host.url=http://192.168.33.10:9000 \
                  -Dsonar.login=sqp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx   # ← TON TOKEN ICI
                """
            }
        }
    }

    // Optionnel mais fortement recommandé : bloquer le pipeline si la Quality Gate échoue
    post {
        always {
            echo "Analyse SonarQube terminée !"
        }
    }
}
