pipeline {
    agent any

    // Variables globales
    environment {
        DOCKERHUB_REPO = "amenichakroun/student-management"
        SONAR_HOST     = "http://192.168.33.10:9000"
        SONAR_PROJECT_KEY = "tp-devops"                         // même clé que dans SonarQube
        SONAR_TOKEN    = "sqp_5e37e87f96800112ac1a51e492f73c599c43b4"  // ton token déjà généré
    }

    tools {
        jdk 'JAVA_HOME'
        maven 'M2_HOME'
    }

    stages {
        // 1. Récupération du code
        stage('Checkout') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/AmeniChakroun/Chakroun_Ameni_4TWIN8.git'
            }
        }

        // 2. Compilation + Packaging Maven
        stage('Build Maven') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        // 3. Analyse SonarQube (OBLIGATOIRE pour l’atelier)
        stage('SonarQube Analysis') {
            steps {
                sh """
                mvn sonar:sonar \
                  -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                  -Dsonar.host.url=${SONAR_HOST} \
                  -Dsonar.login=${SONAR_TOKEN}
                """
            }
        }

        // 4. Construction de l’image Docker
        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${DOCKERHUB_REPO}:latest ."
            }
        }

        // 5. Connexion à Docker Hub
        stage('Login to Docker Hub') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub', 
                    usernameVariable: 'USER', 
                    passwordVariable: 'PASS')]) {
                    sh "echo \$PASS | docker login -u \$USER --password-stdin"
                }
            }
        }

        // 6. Push de l’image
        stage('Push to Docker Hub') {
            steps {
                sh "docker push ${DOCKERHUB_REPO}:latest"
            }
        }
    }

    post {
        success {
            echo "Tout est OK !"
            echo "Rapport SonarQube → ${SONAR_HOST}/dashboard?id=${SONAR_PROJECT_KEY}"
            echo "Image Docker → https://hub.docker.com/r/${DOCKERHUB_REPO}"
        }
        failure {
            echo "Échec du pipeline"
        }
    }
}
